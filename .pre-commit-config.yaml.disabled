  # Django checks
  - repo: local
    hooks:
      - id: django-check
        name: Django Check
        entry: uv run python manage.py check
        language: system
        pass_filenames: false
        always_run: true

      - id: django-migrations-check
        name: Django Migrations Check
        entry: uv run python manage.py makemigrations --check --dry-run
        language: system
        pass_filenames: false
        always_run: true

# Global excludes
exclude: |
  (?x)^(
    static/js/vendor/.*|
    node_modules/.*|
    \.git/.*|
    \.env.*|
    venv/.*|
    __pycache__/.*|
    \.pyc$|
    \.pyo$|
    \.coverage.*|
    htmlcov/.*|
    dist/.*|
    build/.*|
    \.egg-info/.*
  )$
